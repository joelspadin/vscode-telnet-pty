{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "outDir": "out",
        "lib": ["ES2020"],
        "declaration": true,
        "sourceMap": true,
        "rootDir": "src",

        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true
    }
}
